#include <stdio.h>

int main() {
    int n, i, j;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int AT[n], BT[n], P[n], CT[n], TAT[n], WT[n], completed[n];
    int time = 0, count = 0;

    // Input process details
    for(i = 0; i < n; i++) {
        P[i] = i+1;
        printf("Enter Arrival Time for P%d: ", i+1);
        scanf("%d", &AT[i]);
        printf("Enter Burst Time for P%d: ", i+1);
        scanf("%d", &BT[i]);
        completed[i] = 0;
    }

    printf("\nGantt Chart:\n");
    while(count < n) {
        int idx = -1, minBT = 9999;
        for(i = 0; i < n; i++) {
            if(AT[i] <= time && !completed[i] && BT[i] < minBT) {
                minBT = BT[i];
                idx = i;
            }
        }

        if(idx == -1) {
            time++; // No process available, move time
        } else {
            time += BT[idx];
            CT[idx] = time;
            completed[idx] = 1;
            count++;
            printf("| P%d ", P[idx]);
        }
    }
    printf("|\n");

    // Calculate TAT and WT
    float avgTAT = 0, avgWT = 0;
    printf("\nProcess\tAT\tBT\tCT\tTAT\tWT\n");
    for(i = 0; i < n; i++) {
        TAT[i] = CT[i] - AT[i];
        WT[i] = TAT[i] - BT[i];
        avgTAT += TAT[i];
        avgWT += WT[i];
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n", P[i], AT[i], BT[i], CT[i], TAT[i], WT[i]);
    }

    printf("\nAverage Turnaround Time = %.2f", avgTAT/n);
    printf("\nAverage Waiting Time = %.2f\n", avgWT/n);

    return 0;
}
