#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>

#define NTHREADS 5
#define ITER 100000

long long counter = 0;
pthread_mutex_t lock;

void *increment(void *arg) {
    for (int i=0;i<ITER;i++) {
        pthread_mutex_lock(&lock);
        counter++;
        pthread_mutex_unlock(&lock);
    }
    return NULL;
}

int main() {
    pthread_t th[NTHREADS];
    pthread_mutex_init(&lock,NULL);
    for (int i=0;i<NTHREADS;i++) pthread_create(&th[i],NULL,increment,NULL);
    for (int i=0;i<NTHREADS;i++) pthread_join(th[i],NULL);
    printf("Final counter: %lld (expected %d)\n", counter, NTHREADS*ITER);
    return 0;
}
