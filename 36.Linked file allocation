#include <stdio.h>

struct File {
    char name[20];
    int start, length, blocks[20];
};

int main() {
    int n, i, j;
    printf("Enter number of files: ");
    scanf("%d", &n);

    struct File files[n];

    for(i = 0; i < n; i++) {
        printf("\nEnter file name: ");
        scanf("%s", files[i].name);
        printf("Enter number of blocks: ");
        scanf("%d", &files[i].length);
        printf("Enter block numbers: ");
        for(j = 0; j < files[i].length; j++)
            scanf("%d", &files[i].blocks[j]);
    }

    printf("\nLinked File Allocation Table\n");
    printf("File\tBlocks (linked)\n");
    for(i = 0; i < n; i++) {
        printf("%s\t", files[i].name);
        for(j = 0; j < files[i].length; j++) {
            printf("%d", files[i].blocks[j]);
            if(j != files[i].length - 1) printf(" -> ");
        }
        printf("\n");
    }
    return 0;
}
