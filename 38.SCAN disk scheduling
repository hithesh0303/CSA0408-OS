#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, i, j, seek = 0, direction;
    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence: ");
    for(i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter direction (0=left, 1=right): ");
    scanf("%d", &direction);

    int size;
    printf("Enter disk size: ");
    scanf("%d", &size);

    // sort requests
    for(i = 0; i < n-1; i++)
        for(j = i+1; j < n; j++)
            if(req[i] > req[j]) {
                int temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int pos = 0;
    for(i = 0; i < n; i++) if(head < req[i]) { pos = i; break; }

    if(direction == 1) { // moving right
        for(i = pos; i < n; i++) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs((size-1) - head);
        head = size-1;
        for(i = pos-1; i >= 0; i--) {
            seek += abs(req[i] - head);
            head = req[i];
        }
    } else { // moving left
        for(i = pos-1; i >= 0; i--) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs(head - 0);
        head = 0;
        for(i = pos; i < n; i++) {
            seek += abs(req[i] - head);
            head = req[i];
        }
    }

    printf("Total Seek Time: %d\n", seek);
    printf("Average Seek Time: %.2f\n", (float)seek / n);
    return 0;
}
