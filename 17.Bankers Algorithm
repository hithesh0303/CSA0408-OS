#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, m;
    printf("Enter number of processes: "); scanf("%d",&n);
    printf("Enter number of resource types: "); scanf("%d",&m);

    int i,j;
    int alloc[n][m], max[n][m], need[n][m], avail[m];
    printf("Enter allocation matrix:\n");
    for (i=0;i<n;i++) for (j=0;j<m;j++) scanf("%d",&alloc[i][j]);
    printf("Enter max matrix:\n");
    for (i=0;i<n;i++) for (j=0;j<m;j++) { scanf("%d",&max[i][j]); need[i][j]=max[i][j]-alloc[i][j]; }
    printf("Enter available vector:\n");
    for (j=0;j<m;j++) scanf("%d",&avail[j]);

    int finish[n]; for (i=0;i<n;i++) finish[i]=0;
    int safeSeq[n], idx=0;
    int madeProgress;

    do {
        madeProgress = 0;
        for (i=0;i<n;i++) if (!finish[i]) {
            int ok=1;
            for (j=0;j<m;j++) if (need[i][j] > avail[j]) { ok=0; break; }
            if (ok) {
                for (j=0;j<m;j++) avail[j]+=alloc[i][j];
                finish[i]=1;
                safeSeq[idx++]=i;
                madeProgress=1;
            }
        }
    } while (madeProgress);

    for (i=0;i<n;i++) if (!finish[i]) { printf("System is NOT in safe state\n"); return 0; }
    printf("System is in SAFE state.\nSafe sequence: ");
    for (i=0;i<n;i++) printf("P%d%s", safeSeq[i], (i==n-1?"\n":" -> "));
    return 0;
}
