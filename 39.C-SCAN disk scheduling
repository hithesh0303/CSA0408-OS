#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, i, j, seek = 0;
    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence: ");
    for(i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    int size;
    printf("Enter disk size: ");
    scanf("%d", &size);

    // sort requests
    for(i = 0; i < n-1; i++)
        for(j = i+1; j < n; j++)
            if(req[i] > req[j]) {
                int temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int pos = 0;
    for(i = 0; i < n; i++) if(head < req[i]) { pos = i; break; }

    // move right
    for(i = pos; i < n; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    // jump to 0
    seek += abs((size-1) - head);
    seek += (size-1); 
    head = 0;

    for(i = 0; i < pos; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("Total Seek Time: %d\n", seek);
    printf("Average Seek Time: %.2f\n", (float)seek / n);
    return 0;
}
